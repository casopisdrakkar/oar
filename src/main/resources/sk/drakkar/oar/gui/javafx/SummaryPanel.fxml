<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import sk.drakkar.oar.gui.javafx.MyTextArea?>
<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="sk.drakkar.oar.gui.javafx.SummaryController">

    <GridPane hgap="5" vgap="5">
        <padding>
            <Insets top="10" right="10" left="10" bottom="10" />
        </padding>
        <Label fx:id="typeLabel" text="Typ" GridPane.rowIndex="0" GridPane.columnIndex="0"/>

        <HBox GridPane.rowIndex="0"
              GridPane.columnIndex="1"
              GridPane.hgrow="ALWAYS">
            <RadioButton
                    fx:id="articleRadioButton"
                    text="článek"
                    selected="true"
            />
            <RadioButton
                    fx:id="haikuRadioButton"
                    text="haiku"
            />
            <RadioButton
                    fx:id="editorialRadioButton"
                    text="úvodník"
            />
        </HBox>


        <Label fx:id="titleLabel" text="Název" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField
                fx:id="titleTextField"
                GridPane.rowIndex="1"
                GridPane.columnIndex="1"
                GridPane.hgrow="ALWAYS"
                onAction="#onTitleTextFieldActionPerformed"
        />

        <Label fx:id="authorsLabel" text="Autor" GridPane.rowIndex="2" GridPane.columnIndex="0" />
        <TextField
                fx:id="authorsTextField"
                GridPane.rowIndex="2"
                GridPane.columnIndex="1"
                GridPane.hgrow="ALWAYS"
                onAction="#onAuthorsTextFieldActionPerformed"
        />

        <Label fx:id="colorLabel" text="Barva" GridPane.rowIndex="3" GridPane.columnIndex="0" />
        <ComboBox fx:id="colorComboBox"
                  GridPane.rowIndex="3"
                  GridPane.columnIndex="1"
                  GridPane.hgrow="ALWAYS"
                  onAction="#onColorComboBoxActionPerformed"
        />

        <Label fx:id="tagsLabel" text="Tagy" GridPane.rowIndex="4" GridPane.columnIndex="0" />
        <TextField fx:id="tagsTextField"
                   GridPane.rowIndex="4"
                   GridPane.columnIndex="1"
                   GridPane.hgrow="ALWAYS"
                   onAction="#onTagsTextFieldActionPerformed"
        />

        <Label fx:id="summaryLabel" text="Perex" GridPane.rowIndex="5" GridPane.columnIndex="0" />
        <MyTextArea
                fx:id="summaryTextArea"
                GridPane.rowIndex="5"
                GridPane.columnIndex="1"
                GridPane.hgrow="ALWAYS"
        />

    </GridPane>
    <HBox alignment="CENTER_RIGHT" spacing="5">
        <padding>
            <Insets right="10" left="10" bottom="10" />
        </padding>

        <Button text="Nový článek" onAction="#onNewButtonClick"/>
        <Button fx:id="addButton" text="Zaevidovat článek" onAction="#onAddButtonClick"/>
    </HBox>

</VBox>